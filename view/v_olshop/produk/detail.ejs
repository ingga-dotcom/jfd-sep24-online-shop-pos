<%- include('../../v_layout/head') %>
<%- include('../../v_layout/olshop-header') %>

<%
    last_update = (produkJual[0].updated_at) ? produkJual[0].updated_at : produkJual[0].created_at
    last_update_format = moment(last_update).format('DD MMMM YYYY, HH:mm')
%>
<div class="container my-5">
    <div class="row">
        <div class="col-lg-5">
            <div id="carouselExample" class="carousel slide">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/upload/produk-foto/<%= produkJual[0].foto1 %>" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/upload/produk-foto/<%= produkJual[0].foto2 %>" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/upload/produk-foto/<%= produkJual[0].foto3 %>" class="d-block w-100" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="card-body">
                        <h4 class="card-title"><%= produkJual[0].nama %></h4>
                        <p class="card-text">Rp<%= Number(produkJual[0].harga).toLocaleString('id-ID') %></p>
                        <p class="card-text">tersisa: <%= produkJual[0].stok %> unit</p>
                        <div class="row g-0">
                            <div class="col-lg-4">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="card-title text-capitalize">deskripsi</h6>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text"><%= produkJual[0].deskripsi %></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="card-title text-capitalize">spesifikasi</h6>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text"><%= produkJual[0].spesifikasi %></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="card-title text-capitalize">info penting</h6>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text"><%= produkJual[0].info_penting %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <p class="card-text">
                            <div class="row">
                                <div class="col-lg-6">
                                    <small class="text-body-secondary">
                                        Kategori: <%= produkJual[0].kategori_nama %>
                                    </small>
                                </div>
                                <div class="col-lg-6">
                                    <small class="text-body-secondary">
                                        Last updated: <%= last_update_format %>
                                    </small>
                                </div>
                            </div>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../v_layout/olshop-footer') %>
<%- include('../../v_layout/foot') %>