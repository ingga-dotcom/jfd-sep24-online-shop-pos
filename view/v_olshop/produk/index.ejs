<%- include('../../v_layout/head') %>
<%- include('../../v_layout/olshop-header') %>


<div class="container my-5">
    <h1>Produk Indeks</h1>
    <hr>
    <% if (typeof notifikasi !== 'undefined') { %>
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <%- notifikasi %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <br>
    <div class="row">
        <div class="col text-end">
            <a href="/olshop/produk/tambah" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i>
            </a>
        </div>
    </div>
    <table class="table table-hover">
        <thead>
            <tr class="text-capitalize">
                <th>#</th>
                <th>nama</th>
                <th>kategori</th>
                <th>harga</th>
                <th>stok</th>
                <th>foto</th>
                <th>aksi</th>
            </tr>
        </thead>
        <tbody>
            <% for (const i in produkJual) { %>
                <tr>
                    <td><%= Number(i) + 1 %></td>
                    <td><%= produkJual[i].nama %></td>
                    <td><%= produkJual[i].kategori_nama %></td>
                    <td><%= produkJual[i].harga %></td>
                    <td><%= produkJual[i].stok %></td>
                    <td><img src="/upload/produk-foto/<%= produkJual[i].foto1 %>" alt="" height="70px"></td>
                    <td>
                        <a href="/olshop/produk/detail/<%= produkJual[i].id %>" class="btn btn-sm btn-outline-info mx-1">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        <a href="/olshop/produk/edit/<%= produkJual[i].id %>" class="btn btn-sm btn-outline-warning mx-1">
                            <i class="fa-solid fa-edit"></i>
                        </a>
                        <a href="/olshop/produk/hapus/<%= produkJual[i].id %>" class="btn btn-sm btn-outline-danger mx-1">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>


<%- include('../../v_layout/olshop-footer') %>
<%- include('../../v_layout/foot') %>